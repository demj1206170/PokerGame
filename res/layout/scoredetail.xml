<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="得分:" />

    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
         <TextView 
	     	android:text="赢:"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            />
        <TextView
	        android:id="@+id/wintimes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
         <TextView 
	     	android:text="输:"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            />
        <TextView
	        android:id="@+id/losetimes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
         <TextView 
	     	android:text="平:"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            />
        <TextView
	        android:id="@+id/equaltimes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0" />
    </LinearLayout>

</LinearLayout>
